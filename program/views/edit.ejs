    <div class="columns is-centered">
    <h1 class="title is-1">Edit your post</h1>
    </div>
    <div class="columns is-centered ml-6 mr-6">
        <form class="has-text-centered" action="/index/<%= post.id %>?_method=PUT" method="post">
            <div class="field column">
                <div class="control has-icons-left">
                    <input class="input is-primary is-medium" type="text" placeholder="An interesting title" name="title" value="<%= post.title %>">
                    <span class="icon is-small is-left">
                        <i class="fas fa-heading"></i>
                    </span>
                </div>
            </div>

            <div class="field column">
                <div class="control has-icons-left">
                    <textarea class="textarea is-large is-primary" placeholder="Your message " name="content"><%= post.content %></textarea>
                </div>
            </div>
            <button class="button submit is-primary">Apply changes</button>
            <a href="/index/<%= post.authorId %>" class="button is-danger">Back</a>
        </form>
    </div>

