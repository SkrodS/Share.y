<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@700&display=swap" rel="stylesheet">
    <title>Document</title>
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation" style="font-family: 'Comfortaa', cursive;">
        <div class="navbar-brand">
            <a class="navbar-item" href="/index">
                <h1 class="title">Share<span class="has-text-primary">:</span>y</h1>
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/index">
                    Home
                </a>

                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                        More
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item">
                            About
                        </a>
                        <a class="navbar-item">
                            Contact
                        </a>
                    </div>
                </div>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary" href="/index/signup">
                            <strong>Sign up</strong>
                        </a>
                        <a class="button is-light" href="/index/signin">
                            Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container is-max-desktop">
        <% if (created) { %>
            <div class="notification is-success is-light">
                Account created!
            </div>
        <% } %> 
    </div>
    <section class="section">
        <div class="columns is-centered">   
            <div class="box">
                <h1 class="title is-2 has-text-centered">Log in</h1>
                <form action="/index/signin" method="post" id="form" style="width: 25rem;">
                    <div class="field column">
                        <label class="label">Username</label>
                        <div class="control has-icons-left">
                            <input class="input is-primary is-medium" type="text" placeholder="Your username" name="user">
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field column">
                        <label class="label">Password</label>
                        <div class="control has-icons-left">
                            <input class="input is-primary is-medium" type="password" placeholder="Your password" name="password">
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                    </div>

                    <button class="button submit is-primary">Sign in</button>
                    <a class="button is-danger" href="/index">Back</a>
                </form>
            </div>
        </div>
    </section>

    <div class="container is-max-desktop">
        <% if (error) { %>
            <div class="notification is-danger is-light">
                    Incorrect login credentials.
            </div>
        <% } %>
    </div>

    <footer class="footer" style="font-family: 'Comfortaa', cursive;">
        <div class="content has-text-centered">
          <p>
            <strong>Share:y</strong> by <a>Robin Widjeback</a>.
          </p>
        </div>
      </footer>
</body>

<script defer src="https://kit.fontawesome.com/a9c4c9de9b.js" crossorigin="anonymous"></script>

</html>